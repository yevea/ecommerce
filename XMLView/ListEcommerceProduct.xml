<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" display="center" order="100">
            <widget type="text" fieldname="id" />
        </column>
        <column name="reference" display="center" order="110">
            <widget type="text" fieldname="reference" />
        </column>
        <column name="name" display="left" order="120">
            <widget type="text" fieldname="name" />
        </column>
        <column name="price" display="right" order="130">
            <widget type="money" fieldname="price" />
        </column>
        <column name="stock" display="center" order="140">
            <widget type="integer" fieldname="stock">
                <option color="danger">lt:1</option>
                <option color="success">gte:1</option>
            </widget>
        </column>
        <column name="category" display="center" order="150">
            <widget type="select" fieldname="category_id">
                <values source="ecommerce_categories" fieldcode="id" fieldtitle="name" />
            </widget>
        </column>
        <column name="active" display="center" order="160">
            <widget type="checkbox" fieldname="active" />
        </column>
        <column name="visibility" display="center" order="165">
            <widget type="select" fieldname="visibility" translate="true">
                <values title="public">public</values>
                <values title="private">private</values>
            </widget>
        </column>
        <column name="creation-date" display="center" order="170">
            <widget type="timestamp" fieldname="creation_date" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" fieldname="active">1</option>
            <option color="light" fieldname="active">0</option>
        </row>
    </rows>
</view>
