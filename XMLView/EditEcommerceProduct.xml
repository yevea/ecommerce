<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="reference" numcolumns="3">
                <widget type="text" fieldname="reference" required="true" />
            </column>
            <column name="name" numcolumns="6">
                <widget type="text" fieldname="name" required="true" />
            </column>
            <column name="active" numcolumns="3">
                <widget type="checkbox" fieldname="active" />
            </column>
            <column name="price" numcolumns="3">
                <widget type="money" fieldname="price" />
            </column>
            <column name="stock" numcolumns="3">
                <widget type="number" fieldname="stock" />
            </column>
            <column name="category" numcolumns="3">
                <widget type="select" fieldname="category_id">
                    <values source="ecommerce_categories" fieldcode="id" fieldtitle="name" />
                </widget>
            </column>
            <column name="image" numcolumns="6">
                <widget type="text" fieldname="image" />
            </column>
            <column name="description" numcolumns="12">
                <widget type="textarea" fieldname="description" />
            </column>
        </group>
    </columns>
</view>
