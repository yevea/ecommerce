<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="product-name" display="left" order="100">
            <widget type="text" fieldname="product_name" required="true" />
        </column>
        <column name="quantity" display="center" order="110">
            <widget type="number" fieldname="quantity" required="true" />
        </column>
        <column name="price" display="right" order="120">
            <widget type="money" fieldname="price" required="true" />
        </column>
        <column name="subtotal" display="right" order="130">
            <widget type="money" fieldname="subtotal" readonly="true" />
        </column>
    </columns>
</view>
