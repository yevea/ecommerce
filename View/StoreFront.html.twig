{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fa-solid fa-store"></i> {{ trans('storefront') }}
    </h1>

    {% if fsc.families is not empty %}
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group flex-wrap" role="group">
                <a href="{{ asset('StoreFront') }}" class="btn btn-outline-primary {% if fsc.selectedFamily is null %}active{% endif %}">
                    {{ trans('all') }}
                </a>
                {% for fam in fsc.families %}
                <a href="{{ asset('StoreFront') }}?family={{ fam.codfamilia }}" class="btn btn-outline-primary {% if fsc.selectedFamily == fam.codfamilia %}active{% endif %}">
                    {{ fam.descripcion }}
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
        {% for product in fsc.products %}
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px; overflow: hidden;">
                    {% if fsc.productImages[product.idproducto] is defined %}
                    <img src="{{ fsc.productImages[product.idproducto] }}" alt="{{ product.referencia|e }}" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                    {% else %}
                    <i class="fa-solid fa-box fa-3x text-muted"></i>
                    {% endif %}
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ product.referencia }}</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        {{ product.descripcion | slice(0, 100) }}{% if product.descripcion | length > 100 %}...{% endif %}
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="h5 mb-0 text-primary">{{ fsc.formatMoney(product.precio) }}</span>
                        {% if product.stockfis > 0 or product.ventasinstock %}
                        <span class="badge bg-success">{{ trans('in-stock') }}</span>
                        {% else %}
                        <span class="badge bg-danger">{{ trans('out-of-stock') }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-white">
                    {% if product.stockfis > 0 or product.ventasinstock %}
                    <form method="post" action="{{ asset('StoreFront') }}">
                        <input type="hidden" name="action" value="add-to-cart">
                        <input type="hidden" name="idproducto" value="{{ product.idproducto }}">
                        <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa-solid fa-cart-plus"></i> {{ trans('add-to-cart') }}
                        </button>
                    </form>
                    {% else %}
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="fa-solid fa-ban"></i> {{ trans('out-of-stock') }}
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fa-solid fa-info-circle"></i> {{ trans('no-products-available') }}
            </div>
        </div>
        {% endfor %}
    </div>

    {% if fsc.cartItemCount > 0 %}
    <div class="fixed-bottom mb-3 me-3 text-end">
        <a href="{{ asset('ShoppingCartView') }}" class="btn btn-success btn-lg shadow">
            <i class="fa-solid fa-shopping-cart"></i>
            {{ trans('view-cart') }} ({{ fsc.cartItemCount }})
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
