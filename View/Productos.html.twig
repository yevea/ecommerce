{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fa-solid fa-store"></i> {{ trans('products') }}
    </h1>

    {% if fsc.categories is not empty %}
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a href="{{ asset('Productos') }}" class="btn btn-outline-primary {% if fsc.selectedCategory is null %}active{% endif %}">
                    {{ trans('all') }}
                </a>
                {% for cat in fsc.categories %}
                <a href="{{ asset('Productos') }}?category={{ cat.id }}" class="btn btn-outline-primary {% if fsc.selectedCategory == cat.id %}active{% endif %}">
                    {{ cat.name }}
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
        {% for product in fsc.products %}
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
                {% if product.image %}
                <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                {% else %}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fa-solid fa-image fa-3x text-muted"></i>
                </div>
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text text-muted small flex-grow-1">
                        {{ product.description | slice(0, 100) }}{% if product.description | length > 100 %}...{% endif %}
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="h5 mb-0 text-primary">{{ fsc.formatMoney(product.price) }}</span>
                        {% if product.stock > 0 %}
                        <span class="badge bg-success">{{ trans('in-stock') }}</span>
                        {% else %}
                        <span class="badge bg-danger">{{ trans('out-of-stock') }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-white">
                    {% if product.stock > 0 %}
                    <form method="post" action="{{ asset('Productos') }}">
                        <input type="hidden" name="action" value="add-to-cart">
                        <input type="hidden" name="product_id" value="{{ product.id }}">
                        <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa-solid fa-cart-plus"></i> {{ trans('add-to-cart') }}
                        </button>
                    </form>
                    <form method="post" action="{{ asset('Productos') }}">
                        <input type="hidden" name="action" value="stripe-checkout">
                        <input type="hidden" name="product_id" value="{{ product.id }}">
                        <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}">
                        <button type="submit" class="btn btn-dark w-100 mt-2">
                            <i class="fa-brands fa-stripe"></i> {{ trans('buy-with-stripe') }}
                        </button>
                    </form>
                    {% else %}
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="fa-solid fa-ban"></i> {{ trans('out-of-stock') }}
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fa-solid fa-info-circle"></i> {{ trans('no-products-available') }}
            </div>
        </div>
        {% endfor %}
    </div>

    {% if fsc.cartItemCount > 0 %}
    <div class="fixed-bottom mb-3 me-3 text-end">
        <a href="{{ asset('ShoppingCartView') }}" class="btn btn-success btn-lg shadow">
            <i class="fa-solid fa-shopping-cart"></i>
            {{ trans('view-cart') }} ({{ fsc.cartItemCount }})
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
