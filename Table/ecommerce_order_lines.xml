<?xml version="1.0" encoding="UTF-8"?>
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>order_id</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>product_id</name>
        <type>integer</type>
    </column>
    <column>
        <name>product_name</name>
        <type>character varying(200)</type>
        <null>NO</null>
    </column>
    <column>
        <name>quantity</name>
        <type>integer</type>
        <default>1</default>
    </column>
    <column>
        <name>price</name>
        <type>double precision</type>
        <default>0</default>
    </column>
    <column>
        <name>subtotal</name>
        <type>double precision</type>
        <default>0</default>
    </column>
    <constraint>
        <name>pk_ecommerce_order_lines</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>fk_ecommerce_order_lines_order</name>
        <type>FOREIGN KEY (order_id) REFERENCES ecommerce_orders (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>fk_ecommerce_order_lines_product</name>
        <type>FOREIGN KEY (product_id) REFERENCES ecommerce_products (id) ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
</table>
