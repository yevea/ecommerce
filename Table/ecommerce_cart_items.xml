    <column>
        <name>creation_date</name>
        <type>timestamp</type>
    </column>
    <constraint>
        <name>pk_ecommerce_cart_items</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>fk_ecommerce_cart_items_product</name>
        <type>FOREIGN KEY (product_id) REFERENCES ecommerce_products (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>
