<?xml version="1.0" encoding="UTF-8"?>
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>session_id</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>product_id</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>quantity</name>
        <type>integer</type>
        <default>1</default>
